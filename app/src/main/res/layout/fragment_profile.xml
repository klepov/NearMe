<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/profile_image_desc"
        android:scaleType="centerCrop"
        tools:layout_height="300dp"
        tools:layout_width="match_parent"
        tools:src="#d11" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/classic16dp"
        android:layout_marginRight="@dimen/classic16dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nameAndAgePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/classic16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp"
            tools:text="Иван Петров, 19 лет" />


        <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="16dp">-->

        <!---->

        <!--<ImageButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/doWish"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginTop="16dp" />-->
        <!--</RelativeLayout>-->

        <TextView
            android:id="@+id/personWish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Хочет сходить в туалет" />
    </LinearLayout>

    <Button
        android:id="@+id/openVk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/profile_vk" />


</LinearLayout>